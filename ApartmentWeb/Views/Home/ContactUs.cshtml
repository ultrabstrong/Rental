@using ApartmentWeb.Controllers
@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container px-0 mt-4">
    <div class="row g-4">
        <!-- Contact Information Section -->
        <div class="col-lg-7">
            <div class="card border-0 shadow h-100">
                <div class="card-body p-0">
                    <div class="p-4 bg-info-subtle text-center">
                        <i class="bi bi-building fs-1 mb-3 text-info"></i>
                        <h3 class="card-title mb-0 text-dark">Contact Us</h3>
                    </div>
                    <div class="p-4">
                        <!-- Phone -->
                        <div class="d-flex flex-column flex-md-row align-items-center mb-4">
                            <div class="mb-2 mb-md-0 me-md-4 d-flex justify-content-center align-items-center p-3">
                                <i class="bi bi-telephone-fill text-info fs-3"></i>
                            </div>
                            <div class="text-center text-md-start">
                                <h5 class="fw-bold mb-1 text-dark">Call or text</h5>
                                <a href="tel:@Shared.Configuration.PhoneNumber" class="fs-5 text-info text-decoration-none">@Shared.Configuration.PhoneNumber</a>
                            </div>
                        </div>
                        
                        <!-- Email -->
                        <div class="d-flex flex-column flex-md-row align-items-center mb-4">
                            <div class="mb-2 mb-md-0 me-md-4 d-flex justify-content-center align-items-center p-3">
                                <i class="bi bi-envelope-fill text-info fs-3"></i>
                            </div>
                            <div class="text-center text-md-start">
                                <h5 class="fw-bold mb-1 text-dark">Email</h5>
                                <a href="mailto:@Shared.Configuration?.EmailAddress" class="fs-5 text-info text-decoration-none">@Shared.Configuration.EmailAddress</a>
                            </div>
                        </div>
                        
                        <!-- Address -->
                        <div class="d-flex flex-column flex-md-row align-items-center mb-2">
                            <div class="mb-2 mb-md-0 me-md-4 d-flex justify-content-center align-items-center p-3">
                                <i class="bi bi-geo-alt-fill text-info fs-3"></i>
                            </div>
                            <div class="text-center text-md-start">
                                <h5 class="fw-bold mb-1 text-dark">Mailing address</h5>
                                <p class="fs-5 mb-0">@Shared.Configuration.Address</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Business Hours Section -->
        <div class="col-lg-5">
            <div class="card border-0 shadow h-100">
                <div class="card-body p-0">
                    <div class="p-4 bg-secondary-subtle text-center">
                        <i class="bi bi-clock fs-1 mb-3 text-secondary"></i>
                        <h3 class="card-title mb-0 text-dark">Business Hours</h3>
                    </div>
                    <div class="p-4">
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="fw-bold mb-2 text-dark">Monday - Saturday</h5>
                                <p class="fs-5 mb-4">8:00 AM - 5:00 PM</p>
                            </div>
                            <div class="col-md-6">
                                <h5 class="fw-bold mb-2 text-dark">Sunday</h5>
                                <p class="fs-5 mb-4">Closed</p>
                            </div>
                        </div>
                        <p class="fst-italic text-muted">Closed on all national holidays</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>