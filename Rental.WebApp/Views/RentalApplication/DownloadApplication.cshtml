@using Rental.WebApp.Controllers
@inject Microsoft.Extensions.Options.IOptionsSnapshot<Rental.WebApp.Models.Site.SiteOptions> SiteDetails
@{
    ViewBag.Title = "Download Application";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container px-0 mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Application card -->
            <div class="card border-0 shadow overflow-hidden">
                <!-- Application Header -->
                <div class="card-header bg-primary-subtle p-4 border-0">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-file-earmark-pdf fs-2 text-primary me-3"></i>
                        <h3 class="mb-0 text-dark">Rental Application Form</h3>
                    </div>
                </div>
                <div class="card-body p-4 p-lg-5">
                    <!-- Instructions section -->
                    <div class="mb-4">
                        <h5 class="fw-bold text-dark mb-3">Download the PDF application, fill it out, save it, and submit it through email.</h5>
                        <ol class="ps-3">
                            <li class="mb-2">Download the application using the button below</li>
                            <li class="mb-2">Open the PDF file with a PDF reader such as Adobe Acrobat</li>
                            <li class="mb-2">Fill out all required fields in the application form</li>
                            <li class="mb-2">Save the completed application to your computer</li>
                            <li class="mb-2">Email the saved application to us at the address below</li>
                        </ol>
                        <div class="alert alert-warning mt-3 mb-0">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-exclamation-triangle fs-4 me-2"></i>
                                <p class="mb-0"><strong>Important:</strong> Don't forget to save and check the application before submitting it!</p>
                            </div>
                        </div>
                        
                        <!-- Download button -->
                        <div class="text-center mt-4">
                            <a href="~/data/application.pdf" download="application.pdf" class="btn btn-primary btn-lg py-3 px-5">
                                <i class="bi bi-download me-2"></i>Click to download application
                            </a>
                        </div>
                    </div>
                    
                    <!-- Email submission section -->
                    <div class="text-center p-4 bg-light mt-4">
                        <h5 class="mb-2">Email application to</h5>
                        <a href="mailto:@SiteDetails.Value.EmailAddress" class="text-decoration-none text-primary fs-5">
                            <i class="bi bi-envelope me-2"></i>@SiteDetails.Value.EmailAddress
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>