@using Rental.WebApp.Controllers
@using Rental.WebApp.Models.Maintenance
@using Rental.WebApp
@inject Microsoft.Extensions.Options.IOptionsSnapshot<Rental.WebApp.Models.Site.SiteDetails> SiteDetails
@model MaintenanceRequest
@{
    ViewBag.colsize = "sm";
    ViewBag.Title = "Maintenance Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script src="~/js/custom/maintenance-form.js"></script>
}

<div class="container px-0 mt-4" data-company-email="@SiteDetails.Value.EmailAddress">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow overflow-hidden">
                <div class="card-header bg-success-subtle p-4 border-0">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-tools fs-2 text-success me-3"></i>
                        <h3 class="mb-0 text-dark">Maintenance Request</h3>
                    </div>
                </div>
                <div class="card-body p-4 p-lg-5" id="maintenanceFormContainer">
                    <partial name="_MaintenanceRequestForm" model="Model" />
                    <div class="text-center text-muted mt-4">
                        <p class="mb-0 small">For emergency maintenance issues, please call us directly at <span class="fw-bold">@SiteDetails.Value.PhoneNumber</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
